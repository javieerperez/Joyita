<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_principal_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_list_view_post"
            android:layout_width="132dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            app:srcCompat="@drawable/jefe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_list_view_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_list_view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                tools:ignore="InvalidId" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_list_view_post_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/info2" />

    </LinearLayout>

</RelativeLayout>