<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/card_principal_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="?android:attr/textColorHighlightInverse"
    cardview:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LL_tv_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/titulo" />

            <TextView
                android:id="@+id/tv_descripsion_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/descripcion" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/img_btn_llamar_post"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/info2" />

    <ImageView
        android:id="@+id/img_foto_post_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|center_horizontal"
        app:srcCompat="@drawable/jefe" />

</android.support.v7.widget.CardView>