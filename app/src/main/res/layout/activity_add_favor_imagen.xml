<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:background="@android:color/background_light">


    <Button
        android:id="@+id/btnaddimagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:text="ADD IMAGEN" />

    <ImageView
        android:id="@+id/imagen_animal_dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnaddimagen"
        android:layout_marginTop="48dp"
        app:srcCompat="@drawable/picture" />

    <Button
        android:id="@+id/btnCancelaraddFavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        android:background="@android:color/background_light"
        android:text="Cancelar"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/btnAceptaraddFavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancelaraddFavor"
        android:layout_alignBottom="@+id/btnCancelaraddFavor"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/btnCancelaraddFavor"
        android:background="@android:color/background_light"
        android:text="Crear"
        android:textColor="@color/colorAccent" />

</RelativeLayout>